<Window x:Class="DragonSave.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DragonSave"
        mc:Ignorable="d"
        Title="Login and password" Height="250" Width="350">
    <Grid>
        <Label x:Name="labelLogin" Content="Enter login" HorizontalAlignment="Left" Margin="10,35,0,0" VerticalAlignment="Top" Width="121"/>
        <Label x:Name="labelPassword" Content="Enter password" HorizontalAlignment="Left" Margin="10,99,0,0" VerticalAlignment="Top" Width="121"/>
        <TextBox x:Name="txtLogin" HorizontalAlignment="Left" Height="23" Margin="153,35,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" FontSize="14" Background="Beige"/>
        <TextBox x:Name="txtPassword" HorizontalAlignment="Left" Height="23" Margin="153,99,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Background="Beige"/>
        <Button x:Name="btnRegister" Content="To register" HorizontalAlignment="Left" Margin="48,165,0,0" VerticalAlignment="Top" Width="225"/>

    </Grid>
</Window>
